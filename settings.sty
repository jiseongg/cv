}

\renewcommand*{\mkbibnamefamily}[1]{%
  \ifboolexpr{ test {\ifdefstrequal{\namepartfamily}{\@mylastname}}
               and
               test {\ifdefstrequal{\namepartgiven}{\@myfirstname}}}
    {\textbf{#1}}%
    {#1}%
}

\renewcommand*{\mkbibnamegiven}[1]{%
  \ifboolexpr{ test {\ifdefstrequal{\namepartfamily}{\@mylastname}}
               and
               test {\ifdefstrequal{\namepartgiven}{\@myfirstname}}}
    {\textbf{#1}}%
    {#1}%
}

